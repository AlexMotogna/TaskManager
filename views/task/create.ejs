<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Tasks</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 20px;">

    <div class="main">

        <% if(error !== '') {%>
            <div class="card" style="padding: 10px; margin-top: 20px; margin-bottom: 20px;">
                <h5 style="color: red"><%= error %></h5>
            </div>
        <% } %>

        <div class="card">
            <div class="card-header">
                Create Task
            </div>
            <div class="card-body">
                <form action = "/task/create" method="post" id="createform">
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" class="form-control" name="name" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label>Description:</label>
                        <input type="text" class="form-control" name="description" autocomplete="off">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="submit" class="btn btn-info" value="Create"/>
                    </div>
                </form>
            </div>
        </div>

        <br>

        <button onclick="location.href = '/task';" class="btn btn-danger delete" style="margin-bottom: 20px;">Cancel</button>
    </div>

</body>