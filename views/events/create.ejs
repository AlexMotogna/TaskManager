<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Events</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

    <div class="main">

        <% if(error !== '') {%>
            <div class="card" style="padding: 10px; margin-top: 20px; margin-bottom: 20px;">
                <h5 style="color: red"><%= error %></h5>
            </div>
        <% } %>

        <div class="card"> 
            <div class="card-header">
                Create Event
            </div>
            <div class="card-body">
                <form action = "/events/create" method="post" id="createform">
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" class="form-control" name="name" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label>Description:</label>
                        <input type="text" class="form-control" name="description" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label>Date:</label>
                        <input type="datetime-local" class="form-control" name="date" autocomplete="off">
                    </div>
                    <div>
                        <label>Status:</label>
                        <select id="status" name="status" form="createform">
                            <option value="ACTIVE">ACTIVE</option>
                            <option value="INACTIVE">INACTIVE</option>
                            <option value="CANCELLED">CANCELLED</option>
                            <option value="WEEKLY">WEEKLY</option>
                        </select>
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="submit" class="btn btn-info" value="Create"/>
                    </div>
                </form>
            </div>
        </div>

        <br>

        <button onclick="location.href = '/events';" class="btn btn-danger delete" style="margin-bottom: 20px;">Cancel</button>

    </div>

</body>