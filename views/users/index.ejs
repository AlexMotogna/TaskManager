
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Users</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

    <button class="btn btn-info" style="margin-bottom: 20px;" onclick="location.href = '/auth/login'">Add user</button>

    <% if(users.length) { %>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
        <% for(var i = 0; i< users.length; i++) { %>
            <tr>
                <th scope="row"><%= (i+1) %></th>
                <td><%= users[i].name%></td>
                <td><%= users[i].email%></td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <% } %>

    <% if(!users.length) { %>
        <p class="text-center">No user found!</p>
    <% } %>

</body>
</html>